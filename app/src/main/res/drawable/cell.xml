<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/blue"/>
        <size
            android:width="30dp"
            android:height="30dp" />

    </shape>
</item>
<item>
    <shape
        android:shape="oval" >
        <solid android:color="@android:color/background_light" />

        <size
            android:height="20dp"
            android:width="20dp" />
        <padding
            android:bottom="5dp"
            android:left="5dp"
            android:right="5dp"
            android:top="5dp" />

    </shape>
</item>



</layer-list>